#!/usr/bin/env bash

if [ -z "$(which zola)" ]; then
    echo "zola not found, please install it first"
    exit 1
fi

function gen_weekly() {
    title=${1-"周报"}
    lang=${2-"zh"}
    week=$(date +"%Y-%U")
    if [ "${lang}" == "en" ]; then
        file="content/weekly/${week}.md"
    else
        file="content/weekly/${week}.${lang}.md"
    fi
    if [ -e "${file}" ]; then
        echo "Weekly report exist, skip"
        exit 0
    fi
    echo "---
title: ${week} ${title}
date: $(date +"%Y-%m-%d")
---" >> $file
    echo "Weekly report generated in '${file}'"
}

function code_gdb() {
    set -eux;
    path=${1}
    output="./.debug/a-gdb-${RANDOM}.out"
    g++ -g $path -o $output
    gdb $output
    rm $output
}

function main() {
    cmd=$1
    shift
    case $cmd in
        "gen_weekly" | "gw")
            gen_weekly $@
        ;;
        "view" | "v")
            zola serve
        ;;
        "gdb")
            code_gdb $@
        ;;
        *)
            echo "Commands:
    gen_weekly, gw [title] [lang]  Generate weekly report
    view, v                        View the blog
    gdb [path]                     Debug C/C++ source file"
            exit 1
        ;;
    esac
}

main $@
